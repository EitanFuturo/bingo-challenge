@import 'styl/*' 
@font-face

  src url('fonts/firacode-regular.ttf')
  font-family firacode

*
  box-sizing border-box
  margin 0
  padding 0
  font-size 15px
  font-weight bold

body 
  background gold
  font-family firacode

main
  text-align center
  margin u
  display grid
  justify-content center
  grid-gap u
  grid-template-columns repeat(auto-fit, minmax(bolSize, 1fr))

  .bolilla
    background pink
    height bolSize
    line-height bolSize
    border(bolSize)

footer 
  display flex
  justify-content center
  align-items flex-start 
  height 100vh
  background rgba(pink, .9)

  .tombola
    margin-top 5%
    width 20%   
    min-width 134px 
    line-height 4em
    background lighten(pink, 50%)
    border()
    font-size 2em  
    transition all 300ms ease    
    &:hover
      border-bottom 5px solid darken(pink, 30%)
      transform scale(1.05) 
      transition all 300ms ease 

.elegida
  background lighten(pink, 50%) !important